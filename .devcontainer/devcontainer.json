{
  "name": "Modified Rocker/BioConductor Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "features": {
    "ghcr.io/MiguelRodo/DevContainerFeatures/repos:1": {},
    "ghcr.io/MiguelRodo/DevContainerFeatures/config-r:2": {
      "debug": true,
      "debugRenv": true
    },
    "ghcr.io/rocker-org/devcontainer-features/r-rig:1": {
      "installDevTools": false,
      "installREnv": true,
      "installRadian": true,
      "version": "none",
      "pakVersion": "auto",
      "vscodeRSupport": "minimal",
      "pandocVersion": "auto"
    },
    "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
      "packages": "xvfb,vim,libcurl4-openssl-dev,libsecret-1-dev"
    },
    "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {
      "installTinyTex": true
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "quarto.quarto",
        "REditorSupport.r",
        "mathematic.vscode-pdf"
      ]
    },
    "codespaces": {
      "repositories": {
        "MiguelRodo/r-workflow": {
          "permissions": {
            "actions": "write",
            "contents": "write",
            "packages": "read",
            "workflows": "write"
          }
        },
        "SATVILab/dotfiles": {
          "permissions": {
            "actions": "write",
            "contents": "write",
            "packages": "read",
            "workflows": "write"
          }
        },
        "SATVILab/CompTemplate": {
          "permissions": {
            "actions": "write",
            "contents": "write",
            "packages": "read",
            "workflows": "write"
          }
        },
        "MiguelRodo/DevContainerFeatures": {
          "permissions": {
            "actions": "write",
            "contents": "write",
            "packages": "read",
            "workflows": "write"
          }
        },
        "SATVILab/actions": {
          "permissions": {
            "actions": "write",
            "contents": "write",
            "packages": "read",
            "workflows": "write"
          }
        }
      }
    }
  }
}
